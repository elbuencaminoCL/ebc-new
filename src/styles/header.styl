	
	.overlay__list-item a:hover,
	.overlay__list-item a:focus,
	.overlay__list-item a:active
		background-color #C72527
		
	.overlay__container,
	.overlay__list
		height 100%
		width 100%
		

	.overlay
		background-color rgba( 45, 64, 68, .9 )
		bottom 0
		height 0
		left 0
		opacity 0
		overflow hidden
		position fixed
		right 0
		top 0
		visibility hidden
		width 100%
		&.open 
			height 100%
			opacity 1
			visibility visible
			z-index 101
			
	.overlay__container
		min-height 500px
		padding 8rem 0 3rem

	.overlay__list-item
		border 2px solid white
		font-weight 600
		height 50%
		line-height 50px
		margin 0
		padding 0
		text-align center
		a
			background-color transparent
			height 100%
			text-decoration none
			width 100%
	
		span
			color white
			display block
			font-family 'Maven Pro', sans-serif
			font-size 32px
			line-height 1.2
			text-transform uppercase
			width 100%