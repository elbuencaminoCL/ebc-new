
	.btn-group-lg > .btn, 
	.btn-lg
		font-size 14px

	.btn
		border-radius 0
		font-weight 600
		text-transform uppercase

	.btn-red
		border 2px solid #c72527
		color #c72527
		transition all .2s cubic-bezier( .4, 0, .2, 1 )
		&:hover
			background-color #e3bbbc
			border-color #efbebe
			color #c72527
			
	.btn-white		
		border 2px solid white
		color white
		transition all .2s cubic-bezier( .4, 0, .2, 1 )
		&:hover
			background-color rgba( 255,255,255,.3 )
			border-color rgba( 255,255,255,.6 )
			color white
			
	@media screen and ( min-width 48em )
		.btn-group-lg > .btn, 
		.btn-lg
			font-size 18px
			padding 14px 58px