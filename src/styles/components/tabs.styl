
	.contact__tab
		.nav
			margin-bottom 2rem

		.nav-item
			background-color rgba(123, 128, 132, .5)
			display block
			width 100%

		.nav-pills
			.nav-item + .nav-item
				margin-left 0

		.nav-pills
			.nav-link
				border 2px solid #b6b9c0
				border-radius 0
				color #b6b9c0
				font-size 18px
				padding 1em 1em 1em 2.5em
				position relative
				text-transform uppercase
				&:before
					border 2px solid #b6b9c0
					border-radius 50%
					content ""
					height 15px
					left 1em
					margin-top -7.5px
					position absolute
					top 50%
					width 15px
				&.active
					background-color transparent
					border 2px solid white
					color white
					&:before
						background-color white
						border 4px solid #7c8185
						box-shadow 0 0 0 2px white


		.tab-content
			background-color rgba(171, 175, 178, .6)
			color #414141
			padding 2rem

		.tab__content__field
			margin-bottom 2rem
			&:first-of-type
				margin-top 2rem
			label
				display block
				font-weight bold
				margin-bottom 10px
			p
				margin-bottom 10px

			.select
				display inline-block
				font normal normal normal 14px/1 FontAwesome
				font-size inherit
				position relative
				text-rendering auto
				-webkit-font-smoothing antialiased
				-moz-osx-font-smoothing grayscale
				width 100%
				&:after
					content "\f0d7"
					font-size 32px
					margin-top -16px
					position absolute
					right 3rem
					top 50%


			input
			select
			textarea
				background-color #e6e6e6
				border 0
				border-radius 0
				box-shadow none !important
				color #676767
				display block
				outline none
				padding 1rem
				-webkit-appearance none
				width 100%
				&:active
				&:focus
					box-shadow none


			.input
			.select
			.textarea
			p
				padding 0 2rem

			label
				span
					padding-right 18px

			select
				font-family "Lato", sans-serif
				&:hover
					cursor pointer

		.tab__content__submit
			input
				background-color transparent

		.tab__content__title
			color #454648

	@media screen and ( min-width 48em )
		.contact__tab
			.nav
				display flex
				justify-content space-around

			.nav-item
				display inline-block
				width auto

			.tab__content__field
				padding 0 3rem