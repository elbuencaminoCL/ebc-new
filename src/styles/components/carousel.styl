
	.carousel-case
		.carousel-caption
			background-color rgba( 0,0,0,.5 )
			h3
				margin-bottom 0

		.carousel-indicators
			display none


	.carousel-home
		.carousel__btn__link
			&:hover
				background-color #c72527
				border-color #c72527

		.carousel-caption
			height 100%
			text-align left
			top 0

		.carousel__content
			height 100%

		.carousel-indicators
			display none

		.carousel__description
			font-weight 300
			line-height 1.2
			margin-bottom 2rem


		.carousel-indicators
			bottom 0
			left 0
			margin 0 auto
			position absolute
			right 0
			width auto
			li
				background-color #c5c5c7
				border 0
				height 16px
				margin 1rem .5rem
				width 16px
				&.active
					background-color #fb2120

		.carousel__logo
			margin-bottom 2rem

	.carousel-inner
		height 500px
		.carousel-item
			bottom 0
			display block
			left 0
			opacity 0
			position absolute
			right 0
			top 0
			visibility hidden
			transition all .6s cubic-bezier( .4,0,.2,1 )
			&.active
				opacity 1
				visibility visible
			&:before
				background-color rgba( 0,0,0,.3 )
				bottom 0
				content ""
				left 0
				position absolute
				right 0
				top 0
			& > img
				height 100%
				margin 0 auto
				object-fit cover
				width 100%

	.carousel-caption
		bottom 0
		left 0
		right 0

	.carousel-control
		opacity 1
		.icon-next
		.icon-prev
			color white
			font-size 80px
			height 42px
			line-height 24px
			margin-top -40px
			width 26px





	@media screen and ( min-width 48em )

		.carousel-home
			.carousel-caption
				padding-left 8rem

		.carousel-vertical
			.carousel-item
				height 0
				&.active
					height 500px