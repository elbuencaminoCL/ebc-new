#casosText {
    background-color: #ffffff;
    clear: both;
    display: block;
    float: left;
    padding: 70px 0;
    width: 100%;
}
#casosText .row:nth-child(1) h3 {
    color: #C72527;
    padding: 0 30px;
}
#casosText .underline {
    background-color: #c72527;
    clear: both;
    display: block;
    height: 1px;
    margin: 0 auto 35px;
    width: 100px;
}
#casosText .row:nth-child(2) p {
    color: #555555;
    font-size: 16px;
    margin: 0 auto 10px;
    max-width: 700px;
    padding: 0 30px;
}
#casosDisplay {
    background-color: #FFFFFF;
    clear: both;
    display: block;
    float: left;
    padding: 0 0 70px;
    width: 100%;
}
