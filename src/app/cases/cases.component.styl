.casoView {
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
    display: block;
    height: 300px;
}

.casoInfo {
    background-color: rgba(0, 0, 0, 0.35);
    bottom: 20px;
    display: block;
    float: left;
    height: auto;
    padding: 10px;
    margin-top: 100px;
    text-align: center;
    width: 100%;
}
.casoLogo {
    clear: both;
    display: block;
