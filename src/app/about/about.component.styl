#caminantes .row:nth-child(2) div:nth-child(1) .member .memberInfo::after {
	border-left: 20px solid transparent;
    border-right: 20px solid transparent;
    border-top: 20px solid #C72527;
    content: "";
    display: inline-block;
    height: 0;
    left: 50%;
    position: absolute;
    top: 50%;
	-webkit-transform: translateY(-50%) translateX(-25px) rotate(90deg);
    -moz-transform: translateY(-50%) translateX(-25px) rotate(90deg);
    -o-transform: translateY(-50%) translateX(-25px) rotate(90deg);
