.memberTitle {
	clear: both;
    display: block;
    float: left;
    height: 100px;
    width: 100%;
}
.memberTitle span {
	clear: both;
    display: block;
    float: left;
    height: auto;
    width: 100%;
}
.memberTitle span:nth-child(1) {
    font-size: 20px;
    font-weight: bold;
}
.memberTitle span:nth-child(2) {
    font-size: 15px;
}
.memberSocial {
	clear: both;
    display: block;
    float: left;
    height: auto;
    margin-top: 60px;
    width: 100%;
}
.memberSocial a,
.memberSocial a:link,
.memberSocial a:visited {
    color: #ffffff;
    cursor: pointer;
    display: inline-block;
    font-size: 25px;
    margin-right: 5px;
    opacity: 1;
}
.memberSocial a:hover,
.memberSocial a:focus,
.memberSocial a:active {
    opacity: 0.75;
}