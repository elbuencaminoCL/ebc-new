
	.navbar
		left 0
		position absolute
		right 0
		top 0
		&.sticky
			.navbar__container-sticky
				opacity 1
				visibility visible
				transition all .2s cubic-bezier( .4,0,.2,1 )
				z-index 102
			.navbar__figure
				height 0
				margin 0
				opacity 0
				visibility hidden

			.navbar__figure-sticky
				img
					opacity 1
					visibility visible

			.navbar__toggle
				position absolute
				right 0
				top 6px

	.navbar__container
		position relative

	.navbar__container-sticky
		background-color #9F1D1F
		box-shadow 0 2px 8px rgba(0,0,0,0.5)
		left 0
		opacity 0
		padding 1rem 3rem
		position fixed
		right 0
		top 0
		visibility hidden

	.navbar__container-sticky__container
		padding 0
		position relative


	.navbar__figure
		height auto
		position relative
		z-index 1
		img
			max-width 110px


	.navbar__figure-sticky
		img
			opacity 0
			visibility hidden


	.navbar__toggle
		cursor pointer
		height 26px
		position absolute
		right 3rem
		top 3rem
		width 28px
		z-index 102
		span
			background-color white
			border medium none
			cursor pointer
			height 3px
			left 0
			position absolute
			top 0
			width 100%
			&:nth-of-type(2)
				top 10px
			&:nth-of-type(3)
				top 20px

		&.active
			right 4.6rem
			.bottom
				background white
				transform translateY(-10px) translateX(0) rotate(-45deg)
			.middle
				background white
				opacity 0
			.top
				background white
				transform translateY(10px) translateX(0) rotate(45deg)

			.navbar__toggle__content
				opacity 1
				visibility visible

	.navbar__toggle__content
		color white
		opacity 0
		position absolute
		right 3rem
		text-transform uppercase
		visibility hidden

	@media screen and ( min-width 48em )
		.navbar
			&.sticky
				.navbar__toggle
					right 0
					top 6px
					z-index 102

		.navbar__container
			padding 3rem 0 6rem

		.navbar__figure
			img
				max-width none

		.navbar__toggle
			right 0
			top 3rem
			&.active
				right 6px