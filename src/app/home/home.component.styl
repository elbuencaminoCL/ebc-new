
	.around
		background-color #2d4044
		color white


	.header
		background-image url( './assets/images/home/home-cover.jpg' )
		background-repeat no-repeat
		background-size cover
		min-height 580px
		overflow hidden
		position relative

	.header__container
		height 100%
		width 100%

	.header__content
		height 100%
		left 0
		padding 10rem 0 0 0
		position absolute
		right 0


	.header__cropped
		bottom 0
		left 0
		position absolute
		right 0

	.header__description
		padding 0 1.6rem

	.header__title
		line-height 1
		margin 0 auto 1rem
		max-width 260px

	.work
		background-color #ae914b
		color white
		position relative

	.work__container
		position relative
		&:before
			border-left 20px solid transparent
			border-right 20px solid transparent
			border-top 20px solid #ae914b
			bottom -20px
			content ""
			height 20px
			left 0
			margin 0 auto
			position absolute
			right 0
			width 20px
			z-index 11

	.around__description
	.work__description
		margin-bottom 3rem

	@media screen and ( min-width 48em )

		.around__description
		.work__description
			margin 0 auto 3rem
			max-width 690px

		.header
			background-position center -70px
			height 90vh
			min-height 750px

		.header__content
			padding 16rem 0 0 0

		.header__description
			margin 0 auto
			max-width 690px
			padding 0

		.header__title
			margin 0 auto 2rem
			max-width none

		.wrapper
			overflow-x hidden

	@media screen and ( min-width 62em )
		.header
			&:after
			&:before
				border-top 100px solid transparent
				bottom 0
				content ""
				position absolute

			&:after
				border-right 100px solid #e2e0e1
				right 0

			&:before
				border-left 100px solid #e2e0e1
				left 0



	@media screen and ( min-width 1441px )
		.header
			background-position center -200px
			&:after
			&:before
				border-top 340px solid transparent

			&:after
				border-right 340px solid #e2e0e1

			&:before
				border-left 340px solid #e2e0e1