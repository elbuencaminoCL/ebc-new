


	.around
		background-color #2d4044
		color white

	.carousel-caption
		bottom 0
		height 100%
		left 0
		right 0
		text-align left
		top 0

	.carousel__content
		height 100%

	.carousel__dots__row
		bottom 0
		left 0
		margin 0 auto
		max-width 1140px
		position absolute
		right 0
		top 0

	.carousel-indicators
		bottom 0
		left auto
		margin 0
		position relative
		width auto
		li
			background-color #c5c5c7
			border 0
			display block
			height 16px
			margin 1rem 0 1rem auto
			width 16px
			&.active
				background-color #fb2120

	.carousel-inner
		z-index 10
		.item
			background-position center center
			background-size cover
			height 500px
			&:before
				background-color rgba( 0,0,0,.3 )
				bottom 0
				content ""
				left 0
				position absolute
				right 0
				top 0

	.carousel__logo
		margin-bottom 4rem

	.header
		background-position center -70px
		background-repeat no-repeat
		background-size cover
		min-height 580px
		overflow hidden
		position relative

	.header__container
		height 100%
		width 100%

	.header__content
		height 100%
		left 0
		padding 16rem 0 0 0
		position absolute
		right 0


	.header__cropped
		bottom 0
		left 0
		position absolute
		right 0

	.header__description
		padding 0 1.6rem

	.header__title
		line-height 1
		margin 0 auto 4rem
		max-width 260px

	.slider
		img
			margin 0 auto

	.slider__btn
		bottom 1rem
		position absolute

	.slider__btn__link
		&:hover
			background-color #c72527
			border-color #c72527


	.slider__description
		font-weight 300
		line-height 1.2

	.work
		background-color #ae914b
		color white
		position relative

	.work__container
		position relative
		&:before
			border-left 20px solid transparent
			border-right 20px solid transparent
			border-top 20px solid #ae914b
			bottom -20px
			content ""
			height 20px
			left 0
			margin 0 auto
			position absolute
			right 0
			width 20px
			z-index 11

	.around__description
	.work__description
		margin-bottom 3rem

	@media screen and ( min-width 48em )
		.carousel__dots__row
			display flex

		.header
			height 90vh
			min-height 750px

		.header__content
			padding 24rem 0 0 0

		.header__description
			padding 0

		.header__title
			margin 2rem auto 5rem
			max-width none


		.around__description
		.work__description
			margin 0 auto 3rem
			max-width 690px

		.wrapper
			overflow-x hidden

	@media screen and ( min-width 62em )
		.header
			&:after
			&:before
				border-top 100px solid transparent
				bottom 0
				content ""
				position absolute

			&:after
				border-right 100px solid #e2e0e1
				right 0

			&:before
				border-left 100px solid #e2e0e1
				left 0



	@media screen and ( min-width 1441px )
		.header
			background-position center -200px
			&:after
			&:before
				border-top 340px solid transparent

			&:after
				border-right 340px solid #e2e0e1

			&:before
				border-left 340px solid #e2e0e1